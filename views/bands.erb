<h1>Bands</h1>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <% if @bands.any? %>
      <ul>
        <% @bands.each do |band| %>
          <li>
            <a href="/bands/<%= band.id %>"><%= band.name %></a>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="lead text-center">
        Sorry, there are no bands. Try adding one below!
      </p>
    <% end %>
  </div>
</div>
